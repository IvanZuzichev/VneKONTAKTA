<Page x:Class="VneKONTAKTA_Relis.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VneKONTAKTA_Relis"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage">

    <Grid Background="LightGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <ListBox Grid.RowSpan="2" x:Name="MessagesLbx"/>
        <TextBox Grid.Row="2" x:Name="MessageTxt"/>
        <Button Content="Отправить" Grid.Column="1" Grid.Row="3" Background="LightGreen" Click="Button_Click"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Button Content="Выйти" Grid.Row="1" Background="Red" Foreground="White" Click="Nazad_Click" Height="35" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
